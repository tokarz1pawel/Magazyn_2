@model List<Magazyn.Models.CartItems>

<h2>Your Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Products.Name</td>
                    <td>$@item.Products.Price</td>
                    <td>@item.Quantity</td>
                    <td>$@(item.Quantity * item.Products.Price)</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <p>Total: $@(Model.Sum(item => item.Quantity * item.Products.Price))</p>
        <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary">Checkout</a>
    </div>
}
