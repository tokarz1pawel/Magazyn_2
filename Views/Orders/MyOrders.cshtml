@model List<Magazyn.Models.Orders>

<h2>My Orders</h2>

@if (Model.Count == 0)
{
    <p>You haven't placed any orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Order Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>$@order.TotalPrice</td>
                    <td>@order.Status</td>
                    <td>@order.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
}
